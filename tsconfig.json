{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "stripInternal": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "build",
        "rootDir": "src",
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "files": [
        "typings/filepond.d.ts",
        "src/index.ts"
    ],
    "angularCompilerOptions": {
        "skipMetadataEmit": false,
        "skipTemplateCodegen": true,
        "annotateForClosureCompiler": true,
        "flatModuleOutFile": "angular-filepond.js",
        "flatModuleId": "angular-filepond"
    }
}